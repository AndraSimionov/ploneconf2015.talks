<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
  metal:use-macro="here/main_template/macros/master"
  i18n:domain="eea">

<body>

<div metal:fill-slot="content-core">
  <div tal:condition="python: view.speakers_and_talk">
    <div tal:repeat="speakers_and_talk view/speakers_and_talk">
      <div tal:define="speakers python: speakers_and_talk[0]; talk python: speakers_and_talk[1];">
        <div class="speaker-avatar">
          <img src="http://bradfrost.github.com/this-is-responsive/patterns/images/fpo_square.png" alt="Image Alt Text" />
        </div>
        <div class="speaker-details">
          <h3 tal:content="talk/title">Title</h3>
          <ul class="list-inline">
            <li tal:repeat="speaker speakers">
              <a href="speaker page url" 
                 tal:attributes="href speaker/absolute_url"
                 tal:content="speaker/title">
                Speaker
              </a>
            </li>
          </ul>
          <p tal:content="talk/description"> Summary </p>
        </div>
      </div>   
    </div>
  </div>
  <div tal:condition="python: not view.speakers_and_talk">
    <h3> There are no confirmed talks at the moment. </h3>
  </div>
</div>

</body>
</html>
