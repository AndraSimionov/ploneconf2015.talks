<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
  metal:use-macro="here/main_template/macros/master"
  i18n:domain="eea">

<body>
	<div metal:fill-slot="content-title"><h1>Submit a talk</h1></div>
	<section metal:fill-slot="content-core" class="ploneconf-tickets">
		<div class="box box-form">
			<form tal:attributes="action string:${context/absolute_url}/${view/__name__}" method="post" name="submitTalk" 
              class="form form-table" enctype="multipart/form-data">
				<h3> Who are you? </h3>
					<fieldset>
            		<div class="form-group col-sm-2">
						 <label for="name">
						 	Name
						 </label>
				         <input class="form-control" id="name" type="text" name="name"/>
			        </div>
			        <div class="form-group col-sm-2">
			         <label for="email">
					 	E-mail Address
					 </label>
			         <input class="form-control" id="email" type="email" name="email"/>
			         </div>
			         <div class="form-group col-sm-2">
			         <label for="country">
					 	Country
					 </label>
			         <input class="form-control" id="country" type="text" name="country"/>
			         </div>
			         <div class="form-group col-sm-2">
			         <label for="company">
					 	Company / Organization
					 </label>
			         <input class="form-control" id="company" type="text" name="company"/>
			         </div>

			         <div class="form-group col-sm-2">
			         <label for="twitter">
					 	Twitter
					 </label>
			         <input class="form-control" id="twitter" type="text" name="twitter"/>
			         </div>

			         <div class="form-group col-sm-2">
				         <label for="IRC">
						 	IRC
						 </label>
				         <input class="form-control" id="IRC" type="text" name="irc"/>
			         </div>

			         <div class="form-group col-sm-6">
						<label for="picture">
							Picture
						</label>
						<br>
    					<input class="form-control" id="picture" type="file" name="picture"/>
			         </div> 
			         <div class="form-group col-sm-6">
			         <label for="about">
					 	About
					 </label>
			         <textarea id="about" rows="1" cols="1" name="about"> </textarea>
			         </div>
			     </fieldset>
			<h3> What do you want to talk about? </h3>
			     <fieldset>
			     	<div class="form-group col-sm-6">
						 <label for="talk_title">
						 	Title
						 </label>
				         <input id="talk_title" type="text" name="talk_title"/>
			        </div>

			        <div class="form-group col-sm-6">
				         <label for="talk_audience">
						 	Target Audience
						 </label>
				         <input id="talk_audience" type="text" name="talk_audience"/>
			     	</div>

			        <div class="form-group col-sm 2 box">
				         <label for="talk_summary">
						 	Summary
						 </label>
				         <textarea id="talk_summary" name="talk_summary">
				         </textarea>
			        </div>
			     </fieldset>
			     <br>
	            <button class="btn btn-primary pull-right" type="submit">Submit Talk</button>
			</form>
		</div>
	</section>
</body>
</html>
