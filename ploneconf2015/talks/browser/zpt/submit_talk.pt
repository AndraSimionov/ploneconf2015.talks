<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en"
  metal:use-macro="here/main_template/macros/master"
  i18n:domain="eea">

<body>
	<div metal:fill-slot="content-title"><h1>Submit a talk</h1></div>
	<section metal:fill-slot="content-core">
		<form tal:attributes="action string:${context/absolute_url}/${view/__name__}" method="post" name="submitTalk">
			<h3> Who are you? </h3>
				<fieldset>
				 <label for="name">
				 	Name
				 </label>
		         <input id="name" type="text" name="name"/>
		         <br>

		         <label for="email">
				 	E-mail Address
				 </label>
		         <input id="email" type="email" name="email"/>
		         <br>

		         <label for="country">
				 	Country
				 </label>
		         <input id="country" type="text" name="country"/>
		         <br>

		         <label for="company">
				 	Company / Organization
				 </label>
		         <input id="company" type="text" name="company"/>
		         <br>

		         <label for="about">
				 	About
				 </label>
		         <textarea id="about" rows="4" cols="5" name="about"> </textarea>
		         <br>

		         <label for="twitter">
				 	Twitter
				 </label>
		         <input id="twitter" type="text" name="twitter"/>

		         <label for="IRC">
				 	IRC
				 </label>
		         <input id="IRC" type="text" name="irc"/>
		     </fieldset>
		<h3> What do you want to talk about? </h3>
		     <fieldset>
				 <label for="talk_title">
				 	Title
				 </label>
		         <input id="talk_title" type="text" name="talk_title"/>
		         <br>

		         <label for="talk_summary">
				 	Summary
				 </label>
		         <textarea id="talk_summary" name="talk_summary">
		         </textarea>
		         <br>

		         <label for="talk_audience">
				 	Target Audience
				 </label>
		         <input id="talk_audience" type="text" name="talk_audience"/>
		     </fieldset>
            <button class="btn btn-link pull-left" type="submit">Submit form</button>
		</form>
	</section>
</body>
</html>
